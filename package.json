{
  "name": "revestmaster",
  "version": "1.1.0",
  "description": "Calculadora de Materiais de Construção Profissional",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "RevestMaster",
  "license": "ISC",
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.revestmaster.pro",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RevestMaster Pro"
    },
    "publish": {
      "provider": "github",
      "owner": "romeuauri-lgtm",
      "repo": "RevestMaster"
    },
    "directories": {
      "output": "dist"
    }
  }
}